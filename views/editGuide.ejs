<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/informationFavicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/style.css">
    <title>Edit <%= guide.title %></title>
</head>
<body>
    <%- include("partials/navbar") %>
    <div class="main-content editing">
        <h1>Edit Guide</h1>
        <form action="/guide/<%= guide._id %>/edit" method="POST" id="formContainer" enctype="multipart/form-data">
            <div class="section">
                <div>
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" value="<%= guide.title %>" required>
                </div>
                <div>
                    <label for="tag">Tag</label>
                    <input type="text" name="tag" id="tag" value="<%= guide.tag %>" required>
                </div>
                <div id="addNewSection">
                    <% guide.sections.forEach((section, index) => { %>
                        <div>
                          <label for="header">Header</label>
                          <input type="text" name="header[]" value="<%= section.header %>" />
                          
                          <label for="description">Description</label>
                          <input type="text" name="description[]" value="<%= section.description %>" />
                          
                          <label for="image">Image</label>
                          <input type="file" name="image[<%= index %>]" />
                          
                          <% if (section.image) { %>
                            <img src="/uploads/<%= section.image %>" alt="Section Image" />
                            <input type="hidden" name="existingImage[]" value="<%= section.image %>" />
                          <% } %>
                        </div>
                      <% }) %>
                </div>
            </div>
            <button type="submit">Update Guide</button>
        </form>
        <button onclick="newSection()">Add new section</button>
    </div>

    <script>
        let sectionIndex = <%= guide.sections.length %>;
        let filesData = {};

        // Save selected files when a file is chosen
        document.addEventListener('change', (event) => {
            if (event.target.type === 'file') {
                const index = event.target.id.split('-')[1];
                filesData[`image-${index}`] = event.target.files[0];
            }
        });

        function newSection() {
            const inputs = document.querySelectorAll('input[type="text"]');
            let values = {};
            inputs.forEach(input => {
                values[input.id] = input.value;
            });

            let addNewSection = document.getElementById("addNewSection");

            sectionIndex++;

            addNewSection.innerHTML += `
                <div name="section">
                    <h2>Section ${sectionIndex}</h2>
                    <div>
                        <label for="header-${sectionIndex - 1}">Header</label>
                        <input type="text" name="header[${sectionIndex - 1}]" id="header-${sectionIndex - 1}" required>
                    </div>
                    <div>
                        <label for="description-${sectionIndex - 1}">Description</label>
                        <input type="text" name="description[${sectionIndex - 1}]" id="description-${sectionIndex - 1}">
                    </div>
                    <div>
                        <label for="image-${sectionIndex - 1}">Image</label>
                        <input type="file" name="image[${sectionIndex - 1}]" id="image-${sectionIndex - 1}" accept="image/png, image/jpeg, image/jpg">
                    </div>
                </div>
            `;

            inputs.forEach(input => {
                if (values[input.id]) {
                    document.getElementById(input.id).value = values[input.id];
                }
            });

            for (const key in filesData) {
                const inputElement = document.getElementById(key);
                if (inputElement && filesData[key]) {
                    const dataTransfer = new DataTransfer();
                    dataTransfer.items.add(filesData[key]);
                    inputElement.files = dataTransfer.files;
                }
            }
        }
    </script>
</body>
</html>