<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/informationFavicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/style.css">
    <title>Guide</title>
</head>
<body>
    <%- include ("partials/navbar") %>
    <h1>New Guide</h1>
    <form action="/newGuide" method="post" id="formContainer" enctype="multipart/form-data">
        <div class="section">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </div>
            <div>
                <label for="tag">Tag</label>
                <input type="text" name="tag" id="tag" required>
            </div>
            <div id="addNewSection">
                <div name="section">
                    <h2>Section 1</h2>
                    <div>
                        <label for="header">Header</label>
                        <input type="text" name="header[0]" id="header-0" required>
                    </div>
                    <div>
                        <label for="description">Description</label>
                        <input type="text" name="description[0]" id="description-0" required>
                    </div>
                    <div>
                        <label for="image">Image</label>
                        <input type="file" name="image[0]" id="image-0" accept="image/png, image/jpeg, image/jpg" required>
                    </div>
                </div>
            </div>
        </div>
        <button>Send in</button>
    </form>
    <button onclick="newSection()">Create new section</button>

    <script>
        let sectionIndex = 1; // Start with section 1 (0-indexed)

        function newSection() {
            let addNewSection = document.getElementById("addNewSection");

            // Increment the section index
            sectionIndex++;

            // Append a new section with indexed inputs
            addNewSection.innerHTML += `
            <div name="section">
                <h2>Section ${sectionIndex}</h2>
                <div>
                    <label for="header">Header</label>
                    <input type="text" name="header[${sectionIndex - 1}]" id="header-${sectionIndex - 1}" required>
                </div>
                <div>
                    <label for="description">Description</label>
                    <input type="text" name="description[${sectionIndex - 1}]" id="description-${sectionIndex - 1}" required>
                </div>
                <div>
                    <label for="image">Image</label>
                    <input type="file" name="image[${sectionIndex - 1}]" id="image-${sectionIndex - 1}" accept="image/png, image/jpeg, image/jpg" required>
                </div>
            </div>
            `;
        }
    </script>
</body>
</html>
